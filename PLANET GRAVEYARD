<script>
    // 1. Blood Cursor Movement
    const cursor = document.getElementById('blood-cursor');
    document.addEventListener('mousemove', (e) => {
        cursor.style.left = e.clientX + 'px';
        cursor.style.top = e.clientY + 'px';
    });

    // 2. NASA Audio Activation
    document.addEventListener('click', () => {
        document.getElementById('void-music').style.display = 'block';
    }, { once: true });

    // 3. Idle Glitch
    let idleTimer;
    function resetTimer() {
        document.getElementById('glitch-overlay').classList.remove('glitch-active');
        clearTimeout(idleTimer);
        idleTimer = setTimeout(() => { document.getElementById('glitch-overlay').classList.add('glitch-active'); }, 10000);
    }
    window.onload = resetTimer;
    document.onmousemove = resetTimer;

    // 4. Ritual: ILOVEYOU
    let typed = "";
    window.addEventListener('keydown', (e) => {
        typed += e.key.toLowerCase();
        if (typed.includes("iloveyou")) {
            document.getElementById('ritual-void').style.display = 'block';
            setTimeout(() => { document.getElementById('ritual-void').style.opacity = '1'; }, 100);
            document.querySelectorAll('h1, h2, p, img, .cta-button, iframe').forEach(el => el.classList.add('melt'));
        }
    });
</script>

